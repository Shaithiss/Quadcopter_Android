<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtConnection"
        android:id="@+id/txtConInfo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnInfo"
        android:id="@+id/btnConnectionInfo"
        android:layout_above="@+id/txtConInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSendWIFI"
        android:layout_below="@+id/txtConInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:hint="Sende Text an WIFI"
        android:text="@string/txtSendWIFI" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSendWIFI"
        android:id="@+id/btnSend"
        android:layout_below="@+id/txtSendWIFI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WiFiButton"
        android:id="@+id/btnWiFi"
        android:layout_above="@+id/btnConnectionInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:onClick="getWiFiActivity" />
</RelativeLayout>
